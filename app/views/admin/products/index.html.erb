
<div class="pull-right" style="padding-bottom: 20px;">
  <%= link_to("新增產品", new_admin_product_path, :class => "btn btn-primary btn-sm") %>
</div>


<h2> Product List </h2>
 

<table class="table table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th>Product Name</th>
      <th>Manage Options</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
    <tr>
      <td> <%= product.id %>
      <td> <%= link_to(product.title, admin_product_path(product)) %> </td>
      <td> <%= link_to("Edit", edit_admin_product_path(product)) %> </td>
    </tr>
    <% end %>

  </tbody>
</table>
